<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Sportisimo</title>

	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Materialize CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
	<link rel="stylesheet" href="{$basePath}/css/style.css">
	<link rel="stylesheet" href="{$basePath}/css/css.css">
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	{block head}{/block}
</head>

<body>
	<div class=container>
		<div class="flashes">
			<div n:foreach="$flashes as $flash" n:class="alert, 'alert-' . $flash->type">{$flash->message}</div>
		</div>
		{include content}
	</div>

	{block scripts}
		<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
		<script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>

		<!-- Compiled and minified JavaScript -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

		<script src="{$basePath}/js/main.js"></script>

		<script>
			$(document).ready(function(){
				$('.modal').modal();
				$('.alert').fadeIn().delay(10000).fadeOut();
		  	});
		</script>
		{snippet scripts}
			{if isset($redrawed)}
				<script>
					$(document).ready(function() {
						// change text of h4 in component
						$("#edit-brand-header").text({$caption});
						$('#edit-brand').modal("open");
					});
				</script>
			{/if}
		{/snippet}
	{/block}
</body>
</html>
